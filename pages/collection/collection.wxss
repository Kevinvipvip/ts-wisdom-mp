.banner {
    margin: 24rpx;
}

.cate-list {
    margin: 40rpx 24rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.cate-list .catre-item {
    width: 344rpx;
    height: 459rpx;
    border-radius: 18rpx;
    overflow: hidden;
    background-position: center;
    background-repeat: no-repeat;
    background-size: 100%;
    margin-bottom: 24rpx;
    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: center;
}

.cate-list .catre-item .img {
    width: 254rpx;
    height: 288rpx;
    margin-top: 34rpx;
    background-position: center;
    background-size: contain;
    background-repeat: no-repeat;
}

.cate-list .catre-item text {
    width: 194rpx;
    height: 50rpx;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    background-position: center;
    font-size: 36rpx;
    text-align: center;
    line-height: 50rpx;
    color: #ffffff;
}