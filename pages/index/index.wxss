/*公共部分样式start*/
.home-title {
    font-size: 40rpx;
    color: #333333;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 29rpx 24rpx;
    font-weight: bold;
}

.home-title .btn {
    font-weight: normal;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 150rpx;
    height: 60rpx;
    background-color: #d0a34d;
    border-radius: 10rpx;
    font-size: 26rpx;
    color: #ffffff;
}

.home-title .btn.home-more {
    background-color: #ffffff;
    color: #d0a34d;
    width: auto;
}

.home-title .btn.home-more image {
    height: 40%;
    margin-left: 10rpx;
}

/*公共部分样式end*/

.banner .swiper {
    height: 450rpx;
}

.banner .swiper .img {
    width: 100%;
    height: 100%;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
}

/*门票预约*/
.index-ticket {
    margin-top: 14rpx;
    background-position: 95% 80%;
    background-repeat: no-repeat;
    background-size: 151rpx 142rpx;
    overflow: hidden;
}


.index-ticket .explain {
    font-size: 26rpx;
    margin: 61rpx 24rpx 29rpx;
}

.index-ticket .explain text {
    line-height: 40rpx;
    display: block;
    color: #333;
}

.index-ticket .explain text.change-color {
    color: #5cc66d;
}

/*精品馆藏*/
.collection {
    overflow: hidden;
    margin-top: 14rpx;
}

.collection .collect-swiper-box {
    margin: 0 0 30rpx 24rpx;
}

.collection .collect-swiper-box .collect-swiper {
    width: 100%;
    height: 255rpx;
}

.collection .collect-swiper-box .collect-swiper .collect-item {
    width: calc(100% - 24rpx);
    height: 100%;
    margin-right: 24rpx;
}

.collection .collect-swiper-box .collect-swiper .collect-item .img {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 200rpx;
    border-radius: 10rpx;
}

.collection .collect-swiper-box .collect-swiper .collect-item text {
    display: block;
    margin-top: 16rpx;
    color: #333333;
    font-size: 28rpx;
}

/*活动预约*/
.activity {
    overflow: hidden;
    margin-top: 14rpx;
}

.activity .activity-cont {
    margin: 50rpx 24rpx 30rpx;
}

.activity .activity-cont .img {
    height: 468rpx;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}

.activity .activity-cont .img .tip {
    position: absolute;
    right: 12rpx;
    top: 14rpx;
    padding: 9rpx 14rpx;
    font-size: 20rpx;
    color: #ffffff;
    border-radius: 5rpx;
    background: rgba(0, 0, 0, 0.4);
}

.activity .activity-cont .activity-title {
    font-weight: normal;
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 16rpx;
    margin-top: 20rpx;
}

.activity .activity-cont .time {
    font-size: 24rpx;
    color: #999999;
}

/*精选展览*/
.exhibition {
    overflow: hidden;
    margin-top: 14rpx;
}

.exhibition .exhibition-swiper-box {
    margin: 0 0 30rpx 24rpx;
}

.exhibition .exhibition-swiper-box .exhibition-swiper {
    width: 100%;
    height: 390rpx;
}

.exhibition .exhibition-swiper-box .exhibition-swiper .exhibition-item {
    width: calc(100% - 24rpx);
    height: 100%;
    margin-right: 24rpx;
}

.exhibition .exhibition-swiper-box .exhibition-swiper .exhibition-item .img {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 300rpx;
    border-radius: 10rpx;
    display: flex;
    align-items: flex-end;
}

.exhibition .exhibition-swiper-box .exhibition-swiper .exhibition-item .img .exhibition-time {
    font-size: 20rpx;
    color: #ffffff;
    margin: 0 14rpx 14rpx 14rpx;
    padding-left: 21rpx;
    background-size: 16rpx 16rpx;
    background-repeat: no-repeat;
    background-position: left;
}

.exhibition .exhibition-swiper-box .exhibition-swiper .exhibition-item .exhibition-title {
    margin-top: 16rpx;
    color: #333333;
    font-size: 28rpx;
}

.exhibition .exhibition-swiper-box .exhibition-swiper .exhibition-item text {
    display: block;
    margin-top: 10prx;
    font-size: 24rpx;
    color: #999999;
}

/*新闻资讯*/
.news-box {
    overflow: hidden;
    margin-top: 14rpx;
    margin-bottom: 24px;
}

.news-box .news-list {
    margin: 51rpx 24rpx 26rpx;
}

.news-box .news-list .news-item {
    display: flex;
    justify-content: space-between;
    height: 160rpx;
    margin-bottom: 24rpx;
}

.news-box .news-list .news-item .cont {
    flex-grow: 1;
    height: 100%;
    display: flex;
    flex-flow: column;
    justify-content: space-between;
}

.news-box .news-list .news-item .cont .news-title {
    font-size: 28rpx;
    color: #333333;
    line-height: 34rpx;
}

.news-box .news-list .news-item .cont .cont-bottom {
    font-size: 24rpx;
    color: #999999;
    display: flex;
    flex-flow: column;
}

.news-box .news-list .news-item .cont .cont-bottom text {
    display: block;
    margin-top: 18rpx;
}

.news-box .news-list .news-item .cont .cont-bottom text.type {
    background-color: #cf903a;
    color: #ffffff;
    width: 75rpx;
    height: 32rpx;
    text-align: center;
    line-height: 32rpx;
    border-radius: 4rpx;
}

.news-box .news-list .news-item .cont .cont-bottom text.type.bg2 {
    background-color: #a5a59f;
}

.news-box .news-list .news-item .cont .cont-bottom text.type.bg3 {
    background-color: #29ac83;
}

.news-box .news-list .news-item .cont .cont-bottom text.type.bg4 {
    background-color: #f56f40;
}

.news-box .news-list .news-item .img {
    margin-left: 28rpx;
    flex-shrink: 0;
    width: 240rpx;
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 10rpx;
    background-size: cover;
}

.news-box .news-list .news-item:first-child {
    position: relative;
    height: 350rpx;
    z-index: 1;
}

.news-box .news-list .news-item:first-child .cont {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60rpx;
    z-index: 3;
}

.news-box .news-list .news-item:first-child .cont .news-title {
    background-color: rgba(0, 0, 0, 0.6);
    height: 100%;
    width: 100%;
    line-height: 60rpx;
    padding: 0 25rpx;
    box-sizing: border-box;
    color: #ffffff;
}

.news-box .news-list .news-item:first-child .cont .cont-bottom {
    display: none;
}

.news-box .news-list .news-item:first-child .img {
    z-index: 2;
    position: absolute;
    margin: 0;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
